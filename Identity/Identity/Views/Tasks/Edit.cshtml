@model Identity.Models.TaskItem

@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectId" class="form-label"></label>
        <select asp-for="ProjectId" class="form-select" asp-items="@(ViewData["ProjectId"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedUserId" class="form-label"></label>
        <select asp-for="AssignedUserId" class="form-select" asp-items="@(ViewData["AssignedUserId"] as IEnumerable<SelectListItem>)">
            <option value="">Unassigned</option>
        </select>
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priority" class="form-label"></label>
        <select asp-for="Priority" class="form-select" asp-items="@(ViewData["Priorities"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="@(ViewData["Statuses"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstimatedHours" class="form-label"></label>
        <input asp-for="EstimatedHours" class="form-control" />
        <span asp-validation-for="EstimatedHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SelectedTagIds">Tags</label>
        <select name="SelectedTagIds" class="form-control" multiple asp-items="@(ViewData["AvailableTags"] as IEnumerable<SelectListItem>)"></select>
        <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple tags</small>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
