@model Identity.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}

<h2 class="text-danger">Delete Project</h2>

<div class="alert alert-warning">
    Are you sure you want to delete the project:
    <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Created By</dt>
    <dd class="col-sm-10">@Model.CreatedBy?.UserName</dd>

    <dt class="col-sm-2">Created Date</dt>
    <dd class="col-sm-10">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>
