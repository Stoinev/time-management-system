@model List<Project>
@{
    ViewData["Title"] = "Manage Projects";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Manage Projects</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Create">Create project</a>
            <button class="btn btn-secondary">Customize</button>
        </div>
    </div>

    <form method="get" class="input-group mb-3">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search projects..." aria-label="Search" value="@Context.Request.Query["searchTerm"]" />
        <button class="btn btn-outline-secondary" type="submit">Search</button>

        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Filter</button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Active</a></li>
            <li><a class="dropdown-item" href="#">Archived</a></li>
        </ul>
    </form>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Created By</th>
                <th scope="col">Created Date</th>
                <th scope="col">Is Active</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>
                        <i class="bi bi-folder2-open me-1"></i>
                        @project.Name
                    </td>
                    <td>@project.Description</td>
                    <td>@project.CreatedBy?.UserName</td>
                    <td>@project.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>@(project.IsActive ? "Yes" : "No")</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-sm btn-danger">Delete</a>
							<a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-info">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
